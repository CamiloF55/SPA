{
  "name": "portal-educativo-accesible",
  "version": "1.0.0",
  "description": "Portal de Recursos Educativos Accesibles - SPA con React WCAG 2.1 AA",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test": "jest",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "lighthouse": "lighthouse http://localhost:5173 --output html --output-path ./reports/lighthouse-report.html",
    "axe-test": "axe http://localhost:5173"
  },
  "keywords": [
    "react",
    "accessibility",
    "wcag",
    "spa",
    "education",
    "a11y"
  ],
  "author": "Portal Educativo Team",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "react-helmet-async": "^1.3.0",
    "focus-trap-react": "^10.2.3",
    "@headlessui/react": "^1.7.17"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "vite": "^4.4.5",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@axe-core/react": "^4.7.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "lighthouse": "^10.4.0",
    "@axe-core/cli": "^4.7.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}